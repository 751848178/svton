{
  "name": "@svton/ui",
  "version": "1.0.1",
  "description": "Production-ready React UI components library with TypeScript support",
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript"
  ],
  "author": "SVTON Team",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@svton/hooks": "^1.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
