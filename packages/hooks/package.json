{
  "name": "@svton/hooks",
  "version": "1.2.0",
  "description": "Production-ready React hooks collection with TypeScript support",
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "utilities",
    "persist-fn",
    "boolean",
    "toggle",
    "debounce",
    "throttle",
    "mount",
    "unmount"
  ],
  "author": "SVTON Team",
  "license": "MIT",
  "homepage": "https://github.com/svton/hooks#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/svton/hooks.git"
  },
  "bugs": {
    "url": "https://github.com/svton/hooks/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
