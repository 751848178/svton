{
  "name": "@svton/taro-ui",
  "version": "1.0.0",
  "description": "Production-ready Taro UI components library for mini-programs with TypeScript support",
  "keywords": [
    "taro",
    "ui",
    "components",
    "react",
    "miniprogram",
    "wechat",
    "typescript",
    "mobile"
  ],
  "author": "SVTON Team",
  "license": "MIT",
  "homepage": "https://github.com/svton/taro-ui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/svton/taro-ui.git"
  },
  "bugs": {
    "url": "https://github.com/svton/taro-ui/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@tarojs/components": "^3.6.0",
    "@tarojs/taro": "^3.6.0",
    "react": "^18.0.0 || ^19.0.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@svton/hooks": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
